<Window x:Class="_07_WPF_06_img.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_WPF_06_img"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>


        </Grid.ColumnDefinitions>

        <TextBox x:Name="FileNameTB" Grid.Column="0" IsReadOnly="True"></TextBox>

        <Button x:Name="OpenBtn" Content="Open" Click="OpenBtn_Click"></Button>
        <Image x:Name="ImageCtrl"></Image>
        
            
            
    </Grid>
</Window>
